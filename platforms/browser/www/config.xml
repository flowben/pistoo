<?xml version='1.0' encoding='utf-8'?>
<widget id="io.pistoo.pistoolyon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pistoo:Lyon!</name>
    <description>
        Jeu de piste dans la ville de Lyon.
    </description>
    <author email="gaelle.magnet@hotmail.fr">
        Pistoo Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="geo:*" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
